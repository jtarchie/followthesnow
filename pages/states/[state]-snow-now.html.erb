<!--
---
title: 'Snow Now for <%= h state %>'
description: 'Current snow forecasts for ski resorts in <%= h state %>.'
---
-->

<div class="text-sm breadcrumbs mb-4">
  <ul>
    <li><a href="/">All</a></li>
    <li><a href="/countries/<%= resorts.first.country_name.parameterize %>">
        <%= h resorts.first.country_name %>
      </a></li>
    <li><a href="/states/<%= state.parameterize %>"><%= h state %></a></li>
    <li>Snow Now</li>
  </ul>
</div>

<div class="mb-8">
  <h1 class="text-4xl font-bold mb-2">‚ùÑÔ∏è Snow Now: <%= h state %></h1>
  <p class="text-lg text-gray-600 dark:text-gray-400">
    Current snow forecasts for resorts in <%= h state %>. Updated <%= h current_timestamp %>
  </p>
</div>

<!-- Top Snowy Resorts -->
<section class="mb-8">
  <h2 class="text-3xl font-bold mb-4">üèîÔ∏è Most Snow (Forecast Period)</h2>
  <p class="mb-4">These resorts in <%= h state %> are expecting the most snowfall in the coming days:</p>
  
  <% top_resorts = top_snowy_resorts(state: state, limit: 15) %>
  
  <% if top_resorts.any? %>
    <div class="overflow-x-auto">
      <table class="table w-full">
        <thead>
          <tr>
            <th>Rank</th>
            <th>Resort</th>
            <th class="text-right">Total Snow</th>
          </tr>
        </thead>
        <tbody>
          <% top_resorts.each_with_index do |entry, index| %>
            <% resort = entry[:resort] %>
            <% total = entry[:total] %>
            <tr>
              <td class="font-bold">
                <% if index < 3 %>
                  <%= ['ü•á', 'ü•à', 'ü•â'][index] %>
                <% else %>
                  #<%= index + 1 %>
                <% end %>
              </td>
              <td>
                <a href="/resorts/<%= resort.name.parameterize %>" class="link link-primary font-medium">
                  <%= h resort.name %>
                </a>
              </td>
              <td class="text-right font-bold text-blue-700 dark:text-blue-300">
                <%= format_snow_total(total) %> ‚ùÑÔ∏è
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info">
      <span>No significant snow in the forecast period for <%= h state %>. Check back later!</span>
    </div>
  <% end %>
</section>

<!-- Snow Today -->
<section class="mb-8">
  <h2 class="text-3xl font-bold mb-4">üìÖ Snow Today</h2>
  <p class="mb-4">Resorts in <%= h state %> expecting snow in the immediate forecast:</p>
  
  <% snow_today = resorts_with_snow_today(state: state, limit: 15) %>
  
  <% if snow_today.any? %>
    <div class="overflow-x-auto">
      <table class="table w-full">
        <thead>
          <tr>
            <th>Rank</th>
            <th>Resort</th>
            <th class="text-right">Snow Today</th>
          </tr>
        </thead>
        <tbody>
          <% snow_today.each_with_index do |entry, index| %>
            <% resort = entry[:resort] %>
            <% snow = entry[:snow] %>
            <tr>
              <td class="font-bold">
                <% if index < 3 %>
                  <%= ['ü•á', 'ü•à', 'ü•â'][index] %>
                <% else %>
                  #<%= index + 1 %>
                <% end %>
              </td>
              <td>
                <a href="/resorts/<%= resort.name.parameterize %>" class="link link-primary font-medium">
                  <%= h resort.name %>
                </a>
              </td>
              <td class="text-right font-bold text-purple-700 dark:text-purple-300">
                <%= format_snow_total(snow) %> ‚ùÑÔ∏è
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info">
      <span>No resorts in <%= h state %> expecting snow in the immediate forecast.</span>
    </div>
  <% end %>
</section>

<!-- Quick Stats Summary -->
<section class="mb-8">
  <div class="stats stats-vertical lg:stats-horizontal shadow w-full">
    <div class="stat">
      <div class="stat-title">Total Resorts in <%= h state %></div>
      <div class="stat-value text-primary"><%= resorts.count %></div>
      <div class="stat-desc">Tracked ski resorts</div>
    </div>
    
    <div class="stat">
      <div class="stat-title">Resorts w/ Snow</div>
      <div class="stat-value text-secondary">
        <%= resorts.count { |r| r.forecasts.any? { |f| f.snow.to_f.positive? } } %>
      </div>
      <div class="stat-desc">In current forecast period</div>
    </div>
    
    <div class="stat">
      <div class="stat-title">Total Snowfall Forecast</div>
      <div class="stat-value text-accent">
        <%= format_snow_total(total_snow_for_state(state)) %>
      </div>
      <div class="stat-desc">Combined across all resorts</div>
    </div>
  </div>
</section>
