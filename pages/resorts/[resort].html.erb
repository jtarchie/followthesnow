<!--
---
title: 'Weekly forecast of snow for <%= h resort.name %>'
description: '<%= h resort.state %> &raquo; <%= h resort.name %>'
---
-->

<div class="text-sm breadcrumbs mb-4">
  <ul>
    <li><a href="/">All</a></li>
    <li><a href="/#<%= resort.country.parameterize %>">
        <%= h resort.country %>
      </a></li>
    <li><a href="/states/<%= resort.state.parameterize %>">
        <%= h resort.state %>
      </a></li>
    <li>
      <% if resort.url %>
        <a href="<%= resort.url %>">
          <%= h resort.name %>
        </a>
        <% else %>
          <%= h resort.name %>
            <% end %>
    </li>
  </ul>
</div>

<h2 class="text-3xl font-bold mb-4">Long Term Forecast</h2>

<% headers, rows=table_for_longterm(resort) %>
  <div class="overflow-x-auto">
    <table class="table w-full sticky">
      <!-- Table header -->
      <thead>
        <tr>
          <% headers.each do |header| %>
            <th>
              <%= h header %>
            </th>
            <% end %>
        </tr>
      </thead>
      <tbody>
        <% rows.each do |row| %>
          <tr>
            <% row.each do |cell| %>
              <td>
                <%= h cell %>
              </td>
              <% end %>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>