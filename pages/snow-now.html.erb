<!--
---
title: Snow Now - Current Snow Forecasts
description: See which ski resorts are getting snow right now and in the next 48 hours.
---
-->

<div class="mb-8">
  <h1 class="text-4xl font-bold mb-2">‚ùÑÔ∏è Snow Now</h1>
  <p class="text-lg text-gray-600 dark:text-gray-400">
    Current snow forecasts across all resorts. Updated <%= h current_timestamp %>
  </p>
</div>

<!-- Top Snowy Resorts -->
<section class="mb-8">
  <h2 class="text-3xl font-bold mb-4">üèîÔ∏è Most Snow (Forecast Period)</h2>
  <p class="mb-4">These resorts are expecting the most snowfall in the coming days:</p>
  
  <% top_resorts = top_snowy_resorts(limit: 15) %>
  
  <% if top_resorts.any? %>
    <div class="overflow-x-auto">
      <table class="table w-full">
        <thead>
          <tr>
            <th>Rank</th>
            <th>Resort</th>
            <th>Location</th>
            <th class="text-right">Total Snow</th>
          </tr>
        </thead>
        <tbody>
          <% top_resorts.each_with_index do |data, index| %>
            <% resort = data[:resort] %>
            <% total = data[:total] %>
            <tr class="<%= 'snow-cell' if index < 3 %>">
              <td class="font-bold text-lg">
                <% if index == 0 %>
                  ü•á
                <% elsif index == 1 %>
                  ü•à
                <% elsif index == 2 %>
                  ü•â
                <% else %>
                  <%= index + 1 %>
                <% end %>
              </td>
              <td>
                <a href="/resorts/<%= resort.name.parameterize %>" class="font-medium hover:underline">
                  <%= h resort.name %>
                </a>
              </td>
              <td class="text-sm text-gray-600 dark:text-gray-400">
                <a href="/countries/<%= resort.country_name.parameterize %>" class="hover:underline">
                  <%= h resort.country_name %>
                </a>
                ‚Ä∫ 
                <a href="/states/<%= resort.region_name.parameterize %>" class="hover:underline">
                  <%= h resort.region_name %>
                </a>
              </td>
              <td class="text-right font-bold text-blue-700 dark:text-blue-300">
                <%= format_snow_total(total) %> ‚ùÑÔ∏è
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info">
      <span>No significant snow in the forecast period. Check back later!</span>
    </div>
  <% end %>
</section>

<!-- Snow Today -->
<section class="mb-8">
  <h2 class="text-3xl font-bold mb-4">üìÖ Snow Today</h2>
  <p class="mb-4">Resorts expecting snow in the immediate forecast:</p>
  
  <% today_resorts = resorts_with_snow_today %>
  
  <% if today_resorts.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% today_resorts.take(12).each do |resort| %>
        <div class="card bg-gradient-to-br from-blue-50 to-cyan-50 dark:from-blue-900/20 dark:to-cyan-900/20 shadow-sm">
          <div class="card-body p-4">
            <h3 class="card-title text-lg">
              <a href="/resorts/<%= resort.name.parameterize %>" class="hover:underline">
                <%= h resort.name %>
              </a>
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              <%= h resort.region_name %>, <%= h resort.country_name %>
            </p>
            <div class="text-2xl font-bold text-blue-700 dark:text-blue-300 mt-2">
              <%= format_snow_total(resort.forecasts.first.snow.to_f) %> ‚ùÑÔ∏è
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <% if today_resorts.count > 12 %>
      <p class="mt-4 text-center text-gray-600 dark:text-gray-400">
        And <%= today_resorts.count - 12 %> more resorts with snow today...
      </p>
    <% end %>
  <% else %>
    <div class="alert alert-info">
      <span>No resorts expecting snow in today's forecast. Check the forecast period above for upcoming snow!</span>
    </div>
  <% end %>
</section>

<!-- Regional Summaries -->
<section class="mb-8">
  <h2 class="text-3xl font-bold mb-4">üåç Snow by Region</h2>
  <p class="mb-4">Total snowfall expected across different regions:</p>
  
  <% summaries = regional_summaries %>
  
  <% if summaries.any? %>
    <div class="overflow-x-auto">
      <table class="table w-full">
        <thead>
          <tr>
            <th>Region</th>
            <th class="text-right">Resorts w/ Snow</th>
            <th class="text-right">Total Snow</th>
          </tr>
        </thead>
        <tbody>
          <% summaries.take(20).each do |summary| %>
            <tr class="hover:bg-base-200">
              <td>
                <a href="/countries/<%= summary[:country].parameterize %>" class="font-medium hover:underline">
                  <%= h summary[:country] %>
                </a>
              </td>
              <td class="text-right">
                <span class="badge badge-primary">
                  <%= summary[:resort_count] %> / <%= summary[:total_resorts] %>
                </span>
              </td>
              <td class="text-right font-bold text-blue-700 dark:text-blue-300">
                <%= format_snow_total(summary[:total_snow]) %> ‚ùÑÔ∏è
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info">
      <span>No regional snow data available at this time.</span>
    </div>
  <% end %>
</section>

<!-- Quick Stats Summary -->
<section class="mb-8">
  <div class="stats stats-vertical lg:stats-horizontal shadow w-full">
    <div class="stat">
      <div class="stat-title">Total Resorts Tracked</div>
      <div class="stat-value text-primary"><%= @resorts.count %></div>
      <div class="stat-desc">Across <%= countries.count %> countries</div>
    </div>
    
    <div class="stat">
      <div class="stat-title">Resorts w/ Snow</div>
      <div class="stat-value text-secondary">
        <%= @resorts.count { |r| r.forecasts.any? { |f| f.snow.to_f.positive? } } %>
      </div>
      <div class="stat-desc">In current forecast period</div>
    </div>
    
    <div class="stat">
      <div class="stat-title">Total Snow Forecast</div>
      <div class="stat-value text-accent">
        <%= format_snow_total(@resorts.sum { |r| r.forecasts.sum { |f| f.snow.to_f } }) %>
      </div>
      <div class="stat-desc">Across all resorts</div>
    </div>
  </div>
</section>
