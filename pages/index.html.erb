<p>Please select a region to see the available resorts and snow forecast.</p>

<h2 class="text-3xl font-bold mb-4">Regions</h2>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">

  <% countries.each do |country| %>
    <div>
      <h3 class="text-2xl font-semibold mb-2" id="<%= country.parameterize %>">
        <%= h country %>
      </h3>
      <ul class="list-disc pl-5 space-y-1">
        <% states(country: country).each do |state| %>
          <li><a href="/states/<%= state.parameterize %>">
              <%= h state %>
            </a></li>
          <% end %>
      </ul>
    </div>
    <% end %>

</div>